<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detailBg">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@color/titleBarBg">

        <ImageView
            android:id="@+id/title_bar_back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/back" />

        <ImageView
            android:id="@+id/title_bar_more_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/more" />

        <TextView
            android:id="@+id/title_bar_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/title_bar_more_iv"
            android:layout_toRightOf="@id/title_bar_back_iv"
            android:gravity="center"
            android:textColor="@color/title_text_color"
            android:textSize="18sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/article_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar" />

</RelativeLayout>
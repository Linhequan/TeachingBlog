<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeBg">

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/xbanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:AutoPlayTime="3000"
        app:isAutoPlay="false"
        app:isHandLoop="true"
        app:isShowIndicatorOnlyOne="true"
        app:isShowTips="true"
        app:pageChangeDuration="800"
        app:placeholderDrawable="@mipmap/default_image"
        app:pointNormal="@drawable/shape_point_normal"
        app:pointSelect="@drawable/shape_point_select"
        app:pointsContainerBackground="#44aaaaaa"
        app:pointsPosition="RIGHT"
        app:tipTextColor="@color/tipTextColor"
        app:tipTextSize="12sp" />

    <FrameLayout
        android:id="@+id/article_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/xbanner" />

</RelativeLayout>